<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:id="@+id/fra_build_lin"
    android:weightSum="7"
    android:background="@drawable/icon_record_layout_nor"
    android:layout_width="match_parent"
    android:layout_height="35dp">
    <ImageView
        android:layout_gravity="center"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fra_build_canel"
        android:src="@drawable/ic_diary_back"
        />
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="弹一弹"
         android:textSize="25sp"
         android:layout_weight="5"
         android:gravity="center"
         android:textColor="#ffffff"
         />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fra_build_send"
        android:text="发送"
        android:gravity="center"
        android:textColor="#ffffff"
        />
</LinearLayout>
    <EditText
        android:layout_below="@id/fra_build_lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fra_build_edit_content"
        android:hint="今天想动弹什么"
        />
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:weightSum="4"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <ImageView
            android:id="@+id/fra_build_picture"
            android:layout_weight="1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/compose_toolbar_picture_normal"
            />
        <ImageView
            android:id="@+id/fra_build_mention"
            android:layout_weight="1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/compose_toolbar_mention_normal"
            />
        <ImageView
            android:id="@+id/fra_build_trend"
            android:layout_weight="1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/compose_toolbar_trend_normal"
            />
        <ImageView
            android:id="@+id/fra_build_emoji"
            android:layout_weight="1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/compose_toolbar_emoji_normal"
            />
    </LinearLayout>
</RelativeLayout>