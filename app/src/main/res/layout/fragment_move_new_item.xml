<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/move_new_item"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center_vertical"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/move_new_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="title"
            android:textColor="#000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/move_new_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="body"
            android:textColor="#000"
            android:textSize="18sp" />

        -
       <ImageView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/move_new_image"
           />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/item_newsdongtan_author_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="18dp"
                android:text="2017-04-23 16:46:00"
                android:textColor="#000" />



            <TextView
                android:id="@+id/item_newsdongtan_author_zhuanfa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="18dp"
                android:drawableLeft="@drawable/ic_forward"
                android:text="转发"
                android:textColor="#000" />

            <TextView
                android:id="@+id/item_newsdongtan_author_pinlun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="18dp"
                android:layout_toLeftOf="@id/item_newsdongtan_author_zhuanfa"
                android:drawableLeft="@drawable/ic_comment_30"
                android:text="评论"
                android:textColor="#000" />

            <TextView
                android:id="@+id/item_newsdongtan_author_zan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="18dp"
                android:layout_toLeftOf="@id/item_newsdongtan_author_pinlun"
                android:drawableLeft="@drawable/ic_thumb_normal"
                android:drawablePadding="3dp"
                android:text="12"
                android:textColor="#000" />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>