<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/fra_news_blog_lin"
        android:weightSum="7"
        android:background="@drawable/icon_record_layout_nor"
        android:layout_width="match_parent"
        android:layout_height="35dp">
        <ImageView
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fra_news_blog_canel"
            android:src="@drawable/ic_diary_back"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  线下活动"
            android:textSize="25sp"
            android:layout_weight="5"
            android:textColor="#ffffff"
            />

    </LinearLayout>

    <com.androidkun.PullToRefreshRecyclerView
        android:id="@+id/activities_pullto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></com.androidkun.PullToRefreshRecyclerView>
</LinearLayout>